<UserControl
    x:Class="ImgPlacer.Views.Controls.XmlEditorPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:ImgPlacer.Utils.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ImgPlacer.ViewModels"
    xmlns:xmlVms="clr-namespace:ImgPlacer.ViewModels.Xml"
    d:DataContext="{d:DesignInstance viewModels:XmlEditorPanelViewModel}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!-- scenario ノード用テンプレート -->
        <HierarchicalDataTemplate DataType="{x:Type xmlVms:ScenarioNodeViewModel}" ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding DisplayName}" />
        </HierarchicalDataTemplate>

        <!-- 子ノード用テンプレート（必要なら更に入れ子を表示） -->
        <HierarchicalDataTemplate DataType="{x:Type xmlVms:XmlChildNodeViewModel}" ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding DisplayName}" />
        </HierarchicalDataTemplate>
    </UserControl.Resources>

    <Grid>
        <!-- 空のパネル。ドラッグ＆ドロップで XML ファイルを受け付ける -->
        <Border
            x:Name="DropArea"
            Margin="10"
            Padding="20"
            AllowDrop="True"
            Background="#0FADD8E6"
            BorderBrush="#FFB0C4DE"
            BorderThickness="1"
            CornerRadius="6"
            DragEnter="OnDragEnter"
            DragOver="OnDragOver"
            Drop="OnDrop">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <!-- ドキュメントが未ロードのときだけ表示する -->
                        <DataTrigger Binding="{Binding LoadedDocument}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" Text="Drop XML file here" />
                <TextBlock
                    Margin="0,6,0,0"
                    FontSize="11"
                    Opacity="0.7"
                    Text="(中身は今は空です。ファイルを落とすと読み込みます)" />
            </StackPanel>
        </Border>

        <!-- XML が読み込まれている場合はツリー表示 -->
        <TreeView Margin="10" ItemsSource="{Binding Scenarios}">
            <i:Interaction.Behaviors>
                <behaviors:TreeViewSelectedItemBehavior SelectedItem="{Binding SelectedItem, Mode=TwoWay}" />
            </i:Interaction.Behaviors>
            <TreeView.Style>
                <Style TargetType="TreeView">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <!-- ドキュメントが未ロードのときは非表示 -->
                        <DataTrigger Binding="{Binding LoadedDocument}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TreeView.Style>
        </TreeView>
    </Grid>
</UserControl>