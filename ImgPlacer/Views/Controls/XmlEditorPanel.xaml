<UserControl
    x:Class="ImgPlacer.Views.Controls.XmlEditorPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:ImgPlacer.Utils.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:selectors="clr-namespace:ImgPlacer.Views.Selectors"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:viewModels="clr-namespace:ImgPlacer.ViewModels"
    xmlns:xmlVms="clr-namespace:ImgPlacer.ViewModels.Xml"
    d:DataContext="{d:DesignInstance viewModels:XmlEditorPanelViewModel}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!-- scenario ノード用テンプレート -->
        <HierarchicalDataTemplate DataType="{x:Type xmlVms:ScenarioNodeViewModel}" ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding DisplayName}" />
        </HierarchicalDataTemplate>

        <!-- 子ノード用テンプレート（必要なら更に入れ子を表示） -->
        <HierarchicalDataTemplate DataType="{x:Type xmlVms:XmlChildNodeViewModel}" ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding DisplayName}" />
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate DataType="{x:Type xmlVms:AnimationChainNodeViewModel}" ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding DisplayName}" />
        </HierarchicalDataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- 空のパネル。ドラッグ＆ドロップで XML ファイルを受け付ける -->
        <Border
            x:Name="DropArea"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10"
            Padding="20"
            AllowDrop="True"
            Background="#0FADD8E6"
            BorderBrush="#FFB0C4DE"
            BorderThickness="1"
            CornerRadius="6"
            DragEnter="OnDragEnter"
            DragOver="OnDragOver"
            Drop="OnDrop">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <!-- ドキュメントが未ロードのときだけ表示する -->
                        <DataTrigger Binding="{Binding LoadedDocument}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" Text="Drop XML file here" />
                <TextBlock
                    Margin="0,6,0,0"
                    FontSize="11"
                    Opacity="0.7"
                    Text="(中身は今は空です。ファイルを落とすと読み込みます)" />
            </StackPanel>
        </Border>

        <!-- XML が読み込まれている場合はツリー表示 -->
        <TreeView
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            ItemsSource="{Binding Scenarios}">
            <TreeView.InputBindings>
                <KeyBinding
                    Key="V"
                    Command="{Binding PasteCommand}"
                    Modifiers="Control" />
            </TreeView.InputBindings>

            <i:Interaction.Behaviors>
                <behaviors:TreeViewSelectedItemBehavior SelectedItem="{Binding SelectedItem, Mode=TwoWay}" />
                <behaviors:BubbleMouseWheelBehavior />
            </i:Interaction.Behaviors>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding NodeDoubleClickCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <TreeView.Style>
                <Style TargetType="TreeView">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <!-- ドキュメントが未ロードのときは非表示 -->
                        <DataTrigger Binding="{Binding LoadedDocument}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TreeView.Style>
        </TreeView>

        <Border
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            Padding="5"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="3">

            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding LoadedDocument}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <ItemsControl ItemsSource="{Binding XmlAttributeViewModels}">

                <ItemsControl.Resources>
                    <DataTemplate x:Key="TextTemplate" DataType="{x:Type xmlVms:XmlAttributeViewModel}">
                        <TextBox Width="200" Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" />
                    </DataTemplate>

                    <DataTemplate x:Key="IntTemplate" DataType="{x:Type xmlVms:XmlAttributeViewModel}">
                        <TextBox Width="80" Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" />
                    </DataTemplate>

                    <DataTemplate x:Key="BoolTemplate" DataType="{x:Type xmlVms:XmlAttributeViewModel}">
                        <CheckBox IsChecked="{Binding Value}" />
                    </DataTemplate>

                    <selectors:AttributeEditorTemplateSelector
                        x:Key="AttributeEditorSelector"
                        BoolTemplate="{StaticResource BoolTemplate}"
                        IntTemplate="{StaticResource IntTemplate}"
                        TextTemplate="{StaticResource TextTemplate}" />
                </ItemsControl.Resources>

                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type xmlVms:XmlAttributeViewModel}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Width="80"
                                VerticalAlignment="Center"
                                Text="{Binding Name}" />
                            <ContentControl Content="{Binding}" ContentTemplateSelector="{StaticResource AttributeEditorSelector}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Orientation="Horizontal">
            <Button
                Margin="10,2"
                Command="{Binding SelectedItem.MoveElementCommand}"
                Content="Up ↑">
                <Button.CommandParameter>
                    <system:Int32>-1</system:Int32>
                </Button.CommandParameter>
            </Button>

            <Button Command="{Binding SelectedItem.MoveElementCommand}" Content="Down ↓">
                <Button.CommandParameter>
                    <system:Int32>1</system:Int32>
                </Button.CommandParameter>
            </Button>

        </StackPanel>
    </Grid>
</UserControl>