<UserControl
    x:Class="ImgPlacer.Views.Controls.ImageCanvasViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ImgPlacer.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ImgPlacer.ViewModels"
    x:Name="Root"
    d:DataContext="{d:DesignInstance viewModels:ImageCanvasViewerViewModel}"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Border Background="DarkGray" ClipToBounds="True">
        <ItemsControl ItemsSource="{Binding Layers}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <!-- Canvasを使うことで、同一位置に重ねて表示可能 -->
                    <Canvas Background="Transparent" />

                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type viewModels:ImageListViewModel}">
                    <Image
                        Canvas.Left="0"
                        Canvas.Top="0"
                        RenderTransformOrigin="0,0"
                        Source="{Binding SelectedImage.Thumbnail}"
                        Stretch="None">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=controls:ImageCanvasViewer}, Path=DataContext.Zoom}" ScaleY="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=controls:ImageCanvasViewer}, Path=DataContext.Zoom}" />
                                <TranslateTransform X="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=controls:ImageCanvasViewer}, Path=DataContext.OffsetX}" Y="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=controls:ImageCanvasViewer}, Path=DataContext.OffsetY}" />
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Border>
</UserControl>