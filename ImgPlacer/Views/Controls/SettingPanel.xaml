<UserControl
    x:Class="ImgPlacer.Views.Controls.SettingPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels1="clr-namespace:ImgPlacer.ViewModels"
    d:DataContext="{d:DesignInstance viewModels1:SettingPanelViewModel}"
    d:DesignHeight="300"
    mc:Ignorable="d">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="Canvas Width:" />
            <TextBox
                Width="50"
                Margin="6,0"
                Text="{Binding AppSettings.CanvasWidth}" />

            <Border Width="30" />

            <TextBlock VerticalAlignment="Center" Text="Canvas Height:" />
            <TextBox
                Width="50"
                Margin="6,0"
                Text="{Binding AppSettings.CanvasHeight}" />
        </StackPanel>

        <StackPanel Margin="0,15" Orientation="Horizontal">
            <ToggleButton Command="{Binding ToggleFourthLayerVisibilityCommand}" IsChecked="{Binding VisibleFourthLayer}" />
            <TextBlock Margin="8,0" Text="Fold the fourth layer" />
        </StackPanel>

    </StackPanel>
</UserControl>