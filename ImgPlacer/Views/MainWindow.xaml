<Window
    x:Class="ImgPlacer.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:ImgPlacer.Utils.Behaviors"
    xmlns:controls="clr-namespace:ImgPlacer.Views.Controls"
    xmlns:converters="clr-namespace:ImgPlacer.Utils.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewModels="clr-namespace:ImgPlacer.ViewModels"
    Title="{Binding Title}"
    Width="1280"
    Height="720"
    d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Window.Resources>
        <converters:PanelKindToPackIconConverter x:Key="PanelKindToIcon" />
    </Window.Resources>

    <i:Interaction.Behaviors>
        <behaviors:FolderDropBehavior FolderDroppedCommand="{Binding ImageLayerManagerViewModel.LoadImagesCommand}" />
    </i:Interaction.Behaviors>
    <Window.InputBindings>
        <KeyBinding
            Key="I"
            Command="{Binding CopyTagCommand}"
            CommandParameter="animation-image"
            Modifiers="Control+Shift" />

        <KeyBinding
            Key="D"
            Command="{Binding CopyTagCommand}"
            CommandParameter="animation-draw"
            Modifiers="Control+Shift" />
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55" />
            <ColumnDefinition Width="460" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            Background="CornflowerBlue">
            <ItemsControl ItemsSource="{Binding ToolPanelViewModelCollection}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type viewModels:IToolPanelViewModel}">
                        <Button
                            Height="50"
                            Margin="0"
                            Padding="0">
                            <materialDesign:PackIcon
                                Width="50"
                                Height="25"
                                Kind="{Binding PanelKind, Converter={StaticResource PanelKindToIcon}}" />
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <ContentControl
            Grid.Row="0"
            Grid.Column="1"
            d:DesignHeight="180"
            d:DesignWidth="420"
            DataContext="{Binding Path=ImageCanvasViewerViewModel}">
            <controls:ImageCanvasViewer
                Width="{Binding CanvasWidth}"
                Height="{Binding CanvasHeight}"
                Margin="20"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
                <controls:ImageCanvasViewer.LayoutTransform>
                    <ScaleTransform ScaleX="0.25" ScaleY="0.25" />
                </controls:ImageCanvasViewer.LayoutTransform>

                <i:Interaction.Behaviors>
                    <behaviors:CanvasDragBehavior />
                    <behaviors:CanvasZoomBehavior />
                </i:Interaction.Behaviors>

            </controls:ImageCanvasViewer>

        </ContentControl>

        <ItemsControl
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="2"
            ItemsSource="{Binding ImageLayerManagerViewModel.Layers}">

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="1" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <controls:ImageListView />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ScrollViewer
            Grid.Row="1"
            Grid.Column="1"
            VerticalScrollBarVisibility="Auto">

            <ScrollViewer.Resources>
                <!-- CanvasSliderPanel -->
                <DataTemplate DataType="{x:Type viewModels:CanvasSliderPanelViewModel}">
                    <Expander Header="Canvas slider">
                        <StackPanel>
                            <controls:CanvasSliderPanel />
                            <Border Height="10" />
                        </StackPanel>
                    </Expander>
                </DataTemplate>

                <!-- XElementInputPanel -->
                <DataTemplate DataType="{x:Type viewModels:XElementInputPanelViewModel}">
                    <Expander Header="Xml element reader">
                        <StackPanel>
                            <controls:XElementInputPanel />
                            <Border Height="10" />
                        </StackPanel>
                    </Expander>
                </DataTemplate>

                <!-- CopyHistoryList -->
                <DataTemplate DataType="{x:Type viewModels:CopyHistoryListViewModel}">
                    <Expander Header="Copy history">
                        <StackPanel>
                            <controls:CopyHistoryList />
                            <Border Height="10" />
                        </StackPanel>
                    </Expander>
                </DataTemplate>
            </ScrollViewer.Resources>

            <ItemsControl ItemsSource="{Binding ToolPanelViewModelCollection}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

        </ScrollViewer>
    </Grid>
</Window>